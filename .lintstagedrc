{
  "*.{js,jsx,ts,tsx}": [
    "prettier --cache --ignore-unknown  --write",
    "eslint --cache --fix"
  ],
  "package.json": [
    "prettier --cache --write"
  ],
  "*.vue": [
    "prettier --write",
    "eslint --cache --fix"
  ],
  "*.{css,scss,html}": [
    "prettier --cache --ignore-unknown --write"
  ],
  "micro/**/*.{vue,css,scss,html}": [
    "stylelint --fix"
  ],
  "*.md": [
    "prettier --cache --ignore-unknown --write"
  ]
}